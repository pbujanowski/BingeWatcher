<Page
    x:Class="BingeWatcher.Views.MoviePlayerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid>
        <TextBlock Name="title"  Margin="50,27,0,0" FontSize="30" Height="45" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock Name="genere"  Margin="50,72,0,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="52"/>
        <TextBlock Name="link"  Text="link" Margin="50,115,0,0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="52"/>
        <MediaPlayerElement x:Name="mpe"
                            AutoPlay="True"
                            AreTransportControlsEnabled="True"
                            PosterSource="{x:Bind ViewModel.PosterSource, Mode=OneWay}"
                            Source="{RelativeSource}" Margin="50,120,50,50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls IsCompact="False"/>
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
    </Grid>
</Page>
