<Page
    x:Class="BingeWatcher.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="953">
            <StackPanel Orientation="Horizontal">


                <Button Content="Gatunki
                        " Margin="20,0,0,670" Height="40"  Width="150" FontWeight="Bold" Click="Button_Click_1">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="DarkOrange"/>
                            <GradientStop Color="White" Offset="4"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <TextBox x:Name="wyszukaj" Text="Wyszukiwanie"  Margin="20,0,0,670" Height="40"  Width="240" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Content="Szukaj
                        " Margin="20,0,0,670" Height="40"  Width="65" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="DarkOrange"/>
                            <GradientStop Color="White" Offset="4"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Content="Zarejestruj się" Margin="53,0,0,670" Height="40"  Width="122" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="DarkOrange"/>
                            <GradientStop Color="White" Offset="4"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Content="Zaloguj" Margin="136,0,0,670" Height="40"  Width="102" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="DarkOrange"/>
                            <GradientStop Color="White" Offset="4"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

            </StackPanel>


            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
        </Grid>
    </Grid>
</Page>
